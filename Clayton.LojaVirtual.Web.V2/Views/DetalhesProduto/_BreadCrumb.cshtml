@model Clayton.LojaVirtual.Dominio.Dto.BreadCrumbDto

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorGrupo", "Nav",
                new { codigo = Model.GrupoCodigo, grupo = Model.GrupoDescricao })">
            @Model.GrupoDescricao
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorMarca", "Nav",
                new { codigo = Model.MarcaCodigo, marca = Model.MarcaDescricao })">
            @Model.MarcaDescricao
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorGenero", "Nav",
                new { codigo = Model.GeneroCodigo, genero = Model.GeneroDescricao })">
            @Model.GeneroDescricao
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorCategoria", "Nav",
                new { codigo = Model.CategoriaCodigo, categoria = Model.CategoriaDescricao })">
            @Model.CategoriaDescricao
        </a>
    </li>
    <li class="breadcrumb-item active">
        @Model.ProdutoDescricao
    </li>
</ol>