@model Clayton.LojaVirtual.Dominio.Entidade.Administrador

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Efetue o login para continuar</strong>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Autenticacao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new{@class = "form-signin"}))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @*<div class="center-block">
                                        <img class="profile-img" src="//lh3.googleusercontent.com/-xp4g_BouZJc/AAAAAAAAAAI/AAAAAAAAAAA/AAomvV0eVfilV_Gaj4ZDBk-4v0h_4mY4Lg/mo/photo.jpg?sz=46" alt="">
                                    </div>*@
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @placeholder = "Informe seu login" })
                                                
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                @Html.PasswordFor(model => model.Senha, new { @class = "form-control", @placeholder = "Informe sua senha" } )
                                               
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </div>
                    <div class="panel-footer ">
                        Não é um administrador! <a href="@Url.Action("Index", "Produtos", new { Area = "" })" onclick=""> Voltar para Loja Virtual</a>
                    </div>
                </div>
            </div>
        </div>
    </div>



