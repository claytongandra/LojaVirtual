                    </div>
                </li>
                @*<li class="divider"></li>
                <li>
                    <a href="@Url.Action("Index", "Manage", new { Area = "" })">
                        <i class="fa fa-user-md">&nbsp;&nbsp;</i>Minha Conta
                    </a>
                </li>*@
