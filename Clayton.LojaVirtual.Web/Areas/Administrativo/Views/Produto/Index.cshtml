@model IEnumerable<Clayton.LojaVirtual.Dominio.Entidade.Produto>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div class="alert alert-success" id="mensagem"></div>

<h2>Produtos</h2>

<p>
    @Html.ActionLink("Novo Produto", "NovoProduto", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.ProdutoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th class="text-center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row-@item.ProdutoId">
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.ProdutoId)
            </td>
            <td>

                @Html.ActionLink(item.Nome, "Alterar", new { item.ProdutoId })
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td class="text-center">
                @using(Html.BeginForm("Excluir","Produto"))
                {
                    @Html.HiddenFor(modelItem => item.ProdutoId)
                    <input type="submit" value="Excluir" class="btn btn-default btn-xs" />
                }
            </td>
        </tr>
    }

</table>
